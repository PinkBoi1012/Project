extends ../template/adminMain.template.pug
block content
    link(rel='stylesheet', type='text/css', href='https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css')
    script(type='text/javascript', charset='utf8', src='https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js')
    

    if error
        script.
            swal({title: `Warning`,text: `This product type contains product: #{error} `,icon: "warning",});
    script.
        $(document).ready( function () {
            $('#myTable').DataTable();
        } );
    h1 Product Type
    br

    a.buttonCus.tab-button(href='/user/addProductType', role='button') Add Product Type
 
    br
    br
    br
    
   
    table#myTable.display
        thead
            tr
                th Product Type
                th Description
                th Action
        tbody
            each TP in dataProductType
                tr
                    -let linkInfo = "/user/productTypeUpdate/"+TP._id
                    -let linkDelete = "/user/productTypeDelete/"+TP._id
                    td= TP.TP_name  
                    //- td= TP.TP_description
                    td= TP.TP_description
                    td <a class="btn" href=#{linkInfo} role="button">Edit</a>&ensp;<a class="btn" href=#{linkDelete} role="button">Delete</a>

                    
        

